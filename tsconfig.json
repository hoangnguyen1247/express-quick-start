{
    "version": "2.4.2",
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "lib": [
            "es5",
            "es6"
        ],
        "sourceMap": true,
        "outDir": "./build",
        "resolveJsonModule": true,

        "strict": false,

        "moduleResolution": "node",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules"
    ]
}